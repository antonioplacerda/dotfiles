alias py='/usr/local/bin/python3'
alias pym='/usr/local/bin/python3 -m'

# pip
alias ppip='/usr/local/bin/python3 -m pip'
alias pipi='/usr/local/bin/python3 -m pip install'
alias pipu='/usr/local/bin/python3 -m pip install --upgrade pip'
alias pipir='/usr/local/bin/python3 -m pip install -r requirements.txt'
alias pipr='/usr/local/bin/python3 -m pip freeze > requirements.txt'

# venv
alias penv='/usr/local/bin/python3 -m venv .venv'
alias penva='source ./.venv/bin/activate'