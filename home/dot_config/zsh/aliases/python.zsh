alias py='python3'
alias pym='python3 -m'

# pip
alias ppip='python3 -m pip'
alias pipi='python3 -m pip install'
alias pipu='python3 -m pip install --upgrade pip'
alias pipir='python3 -m pip install -r requirements.txt'
alias pipr='python3 -m pip freeze > requirements.txt'

# venv
alias penv='python3 -m venv .venv'
alias penva='source ./.venv/bin/activate'